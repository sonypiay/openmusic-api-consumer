    "start": "npm run consumer:email"
  },
  "dependencies": {
    "amqplib": "^0.10.9",
    "dotenv": "^17.2.1",
    "nodemailer": "^7.0.6",
    "pg": "^8.16.3",
    "sanitize-html": "^2.17.0"
  },
  "devDependencies": {
    "dotenv-cli": "^10.0.0"
  }
}
