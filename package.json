{
  "name": "openmusic-api-consumer",
  "version": "1.0.0",
  "description": "Consumer Open Music API",
  "license": "ISC",
  "author": "sonypiay",
  "type": "module",
  "main": "./src/Listener.js",
  "scripts": {
    "consumer:email": "dotenv -- node ./listeners/Listener.js --class=EmailListener --max-retry=3 --retry-delay=5000",
